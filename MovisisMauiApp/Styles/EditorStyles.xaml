<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="MovisisMauiApp.Styles.EditorStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:MovisisMauiApp.Controls.UIControls">

    <Style x:Key="BorderlessEditorStyle" TargetType="control:BorderlessEditor">
        <Setter Property="TextColor" Value="{DynamicResource Gray-900}" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={DynamicResource PlaceholderTextColorLight}, Dark={DynamicResource PlaceholderTextColorDark}}" />
    </Style>

</ResourceDictionary>